	public void enterDetails() throws InterruptedException
	{
		Thread.sleep(1000);
		fromDiv.click();
		fromInput.click();
		Thread.sleep(1000);
		fromInput.clear();
		Thread.sleep(1000);
		fromInput.sendKeys("Indore");
		Thread.sleep(1000);
		toDiv.click();
		toInput.click();
		toInput.sendKeys("Europe");
		Thread.sleep(1000);
		listInput.click();
		Thread.sleep(1000);
		depDate.click();
		Thread.sleep(1000);
		roomApply.click();
		Thread.sleep(1000);
		optApply.click();
		Thread.sleep(1000);

		
		
	}

	
